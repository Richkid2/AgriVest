{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
  "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./typechain-types"],
    "allowJs": true
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./deploy/**/*",
    "./hardhat.config.ts",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts"
  ]
}